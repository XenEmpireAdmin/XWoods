<RecipeDefs>




	<RecipeDef>
		<defName>StainWalnut</defName>
		<label>walnut stain</label>
		<description>Apply stain to wood to give it a walnut finish.</description>
		<jobString>Staining wood.</jobString>
		<workAmount>500</workAmount>
		<recipeUsers>
			<li>Refinery</li>
		</recipeUsers>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<products>
			<WalnutWood>20</WalnutWood>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>1</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>




